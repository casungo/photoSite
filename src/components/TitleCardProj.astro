---
const { img, title, contentDate, contentTitle } = Astro.props;
---

<style>
  .card-img-overlay {
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  }
</style>

<div class="card text-bg-dark mx-auto my-4">
  <img src={img} class="card-img" alt={title} style="max-height: 150px;" />
  <div class="card-img-overlay">
    <p
      class="card-text position-absolute bottom-0 start-50 translate-middle-x pb-3"
    >
      {contentDate}
      <br />
      {contentTitle}
    </p>
  </div>
</div>
